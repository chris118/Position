<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="Power:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:id="@+id/textView" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="-58"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginStart="0dp"
            android:id="@+id/power"
            android:layout_width="60dp" />

        <TextView
            android:text="Width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignBaseline="@+id/power"
            android:layout_alignBottom="@+id/power"
            android:layout_toEndOf="@+id/power" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="1080"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView2"
            android:id="@+id/width"
            android:layout_width="80dp" />

        <TextView
            android:text="Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/width" />


        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="1920"
            android:ems="10"
            android:layout_alignBaseline="@+id/width"
            android:layout_alignBottom="@+id/width"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/height"
            android:layout_width="80dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

    </RelativeLayout>
</LinearLayout>